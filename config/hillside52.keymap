#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define COLEMK_L 0
#define QWERTY_L 1
#define GAME_L   2
#define NAV_L    3
#define SYM_L    4
#define ADJ_L    5

#define Undo   LC(Z)
#define Cut    LC(X)
#define Copy   LC(C)
#define Paste  LC(V)
#define Redo   LC(Y)
#define All    LC(A)
#define CBack  LC(BSPC)
#define RDesk  LC(LG(RIGHT))
#define LDesk  LC(LG(LEFT))

/ {
        macros {
            sym_pnd: sym_pnd {
                wait-ms = <40>;
                tap-ms = <40>;
                bindings
                    = <&macro_press   &kp LALT>
                    , <&macro_tap     &kp KP_N0 &kp KP_N1 &kp KP_N6 &kp KP_N3>
                    , <&macro_release &kp LALT>
                    ;
            };
            sym_eur: sym_eur {
                wait-ms = <40>;
                tap-ms = <40>;
                bindings
                    = <&macro_press   &kp LALT>
                    , <&macro_tap     &kp KP_N0 &kp KP_N1 &kp KP_N2 &kp KP_N8>
                    , <&macro_release &kp LALT>
                    ;
            };
        };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
/* COLEMAK-DH
 * -------------------------------------------------------------------------------------------------------------------------------------
 * | TAB   |   Q   |   W   |   F   |   P   |   B   |-----------------------------------|   J   |   L   |   U   |   Y   |   '   |  DEL  |
 * | ESC   |   A   |   R   |   S   |   T   |   G   |-----------------------------------|   M   |   N   |   E   |   I   |   O   | ENTER |
 * | CAPS  |   Z   |   X   |   C   |   D   |   V   |  WIN  |-------------------| ALTGR |   K   |   H   |   ,   |   .   |   -   |   /   |
 * | #     |   &   |  ALT  |-------|  CTRL | SHIFT | SPACE |  Nav  |---|  Sym  |  CBCK | SHIFT |  CTRL |-------|  ALT  |   |   |   \   |
 */
                        bindings = <
&kp  TAB      &kp  Q        &kp  W        &kp  F        &kp  P        &kp  B                                                                         &kp  J        &kp  L        &kp  U        &kp  Y        &kp  SQT      &kp  DEL
&kp  ESC      &kp  A        &kp  R        &kp  S        &kp  T        &kp  G                                                                         &kp  M        &kp  N        &kp  E        &kp  I        &kp  O        &kp  ENTER
&kp  CAPS     &kp  Z        &kp  X        &kp  C        &kp  D        &kp  V        &kp  LGUI                                          &kp  RALT     &kp  K        &kp  H        &kp  COMMA    &kp  DOT      &kp  MINUS    &kp  SLASH
&kp  HASH     &kp  AMPS     &kp  LALT                   &kp  LCTRL    &kp  LSHIFT   &kp  SPACE      &mo  NAV_L           &mo  SYM_L    &kp  CBack    &kp  RSHIFT   &kp  RCTRL                  &kp  LALT     &kp  PIPE     &kp  BSLH
                        >;

                        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
                };

                qwerty_layer {
/* QWERTY
 * -------------------------------------------------------------------------------------------------------------------------------------
 * | TAB   |   Q   |   W   |   E   |   R   |   T   |-----------------------------------|   Y   |   U   |   I   |   O   |   P   |  DEL  |
 * | ESC   |   A   |   S   |   D   |   F   |   G   |-----------------------------------|   H   |   J   |   K   |   L   |   '   | ENTER |
 * | CAPS  |   Z   |   X   |   C   |   V   |   B   |  WIN  |-------------------| ALTGR |   N   |   M   |   ,   |   .   |   -   |   /   |
 * | #     |   &   |  ALT  |-------|  CTRL | SHIFT | SPACE |  Nav  |---|  Sym  |  CBCK | SHIFT |  CTRL |-------|  ALT  |   |   |   \   |
 */
                        bindings = <
&kp  TAB      &kp  Q        &kp  W        &kp  E        &kp  R        &kp  T                                                                         &kp  Y        &kp  U        &kp  I        &kp  O        &kp  P        &kp  DEL
&kp  ESC      &kp  A        &kp  S        &kp  D        &kp  F        &kp  G                                                                         &kp  H        &kp  J        &kp  K        &kp  L        &kp  SQT      &kp  ENTER
&kp  CAPS     &kp  Z        &kp  X        &kp  C        &kp  V        &kp  B        &kp  LGUI                                          &kp  RALT     &kp  N        &kp  M        &kp  COMMA    &kp  DOT      &kp  MINUS    &kp  SLASH
&kp  HASH     &kp  AMPS     &kp  LALT                   &kp  LCTRL    &kp  LSHIFT   &kp  SPACE    &mo  NAV_L             &mo  SYM_L    &kp  CBack    &kp  RSHIFT   &kp  RCTRL                  &kp  LALT     &kp  PIPE     &kp  BSLH
                        >;

                        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
                };

                game_layer {
/* GAME
 * -------------------------------------------------------------------------------------------------------------------------------------
 * | TAB   |   Q   |   W   |   F   |   P   |   B   |-----------------------------------|   J   |   L   |   U   |   Y   |   '   |  DEL  |
 * | ESC   |   A   |   R   |   S   |   T   |   G   |-----------------------------------|   M   |   N   |   E   |   I   |   O   | ENTER |
 * | CAPS  |   Z   |   X   |   C   |   D   |   V   |  WIN  |-------------------| ALTGR |   K   |   H   |   ,   |   .   |   -   |   /   |
 * | #     |   &   | SPACE |-------|  ALT  | CTRL  | SHIFT |  Nav  |---|  Sym  |  CBCK | SHIFT |  CTRL |-------|  ALT  |   |   |   \   |
 */
                        bindings = <
&kp  TAB      &kp  Q        &kp  W        &kp  F        &kp  P        &kp  B                                                                         &kp  J        &kp  L        &kp  U        &kp  Y        &kp  SQT      &kp  DEL
&kp  ESC      &kp  A        &kp  R        &kp  S        &kp  T        &kp  G                                                                         &kp  M        &kp  N        &kp  E        &kp  I        &kp  O        &kp  ENTER
&kp  CAPS     &kp  Z        &kp  X        &kp  C        &kp  D        &kp  V        &kp  LGUI                                          &kp  RALT     &kp  K        &kp  H        &kp  COMMA    &kp  DOT      &kp  MINUS    &kp  SLASH
&kp  HASH     &kp  AMPS     &kp  SPACE                  &kp  LALT     &kp  LCTRL    &kp  LSHIFT     &mo  NAV_L           &mo  SYM_L    &kp  CBack    &kp  RSHIFT   &kp  RCTRL                  &kp  LALT     &kp  PIPE     &kp  BSLH
                        >;

                        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
                };

                nav_layer {
/* NAV
 * -------------------------------------------------------------------------------------------------------------------------------------
 * | TAB   |       | PrevS | PlayP | NextS |  Mute |-----------------------------------| PGUP  | HOME  |  Up   |  END  | BRT_U |  DEL  |
 * | ESC   |  WIN  |  Alt  | Ctrl  | Shift |  ^Z   |-----------------------------------| PGDN  |  Left |  Down | Right | BRT_D | ENTER |
 * | EURO  |  ^A   |  ^V   |  ^X   |  ^C   |  ^Y   |  WIN  |-------------------| ALTGR | VOL_D | VOL_U |  BACK | FORW  | LDesk | RDesk |
 * |       |       |  ALT  |-------|  CTRL | SHIFT | SPACE |       |---| ADJ_L |  BCK  | SHIFT |  CTRL |-------|  ALT  |       |       |
 */
                        bindings = <
&kp  TAB      &trans        &kp  C_PREV   &kp  C_PP     &kp  C_NEXT   &kp  C_MUTE                                                                    &kp   PG_UP   &kp  HOME     &kp   UP      &kp   END        &kp  C_BRI_UP &kp DEL
&kp  ESC      &kp  LGUI     &kp  LALT     &kp  LCTRL    &kp  LSHIFT   &kp  Undo                                                                      &kp   PG_DN   &kp  LEFT     &kp   DOWN    &kp   RIGHT      &kp C_BRI_DN  &kp ENTER
&sym_eur      &kp  All      &kp  Paste    &kp  Cut      &kp  Copy     &kp  Redo     &kp  LGUI                                          &kp  RALT     &kp C_VOL_DN  &kp  C_VOL_UP &kp C_AC_BACK &kp C_AC_FORWARD &kp LDesk     &kp RDesk
&trans        &trans        &kp  LALT                   &kp  LCTRL    &kp  LSHIFT   &kp  SPACE      &trans               &mo  ADJ_L    &kp  BSPC     &kp  RSHIFT   &kp  RCTRL                  &kp  LALT        &trans        &trans
                        >;

                        sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
                };

                sym_layer {
/* SYM
 * -------------------------------------------------------------------------------------------------------------------------------------
 * | TAB   |   @   |   Â£   |   $   |   %   |   _   |-----------------------------------|   +   |   7   |   8   |   9   |   *   |  DEL  |
 * | ESC   |   !   |   ;   |   (   |   )   |   {   |-----------------------------------|   .   |   4   |   5   |   6   |   =   | ENTER |
 * | PRTSC |   ?   |   :   |   [   |   ]   |   }   |  WIN  |-------------------| ALTGR |   0   |   1   |   2   |   3   |   -   |   /   |
 * |   ~   |   `   |  ALT  |-------|  CTRL | SHIFT | SPACE | ADJ_L |---|       |  CBCK | SHIFT |  CTRL |-------|  ALT  |  CBCK | BSPC  |
 */
                        bindings = <
&kp  TAB      &kp  AT       &sym_pnd      &kp  DOLLAR   &kp  PERCENT  &kp  UNDER                                                                     &kp  PLUS     &kp  N7       &kp  N8       &kp  N9       &kp  STAR     &kp  DEL
&kp  ESC      &kp  EXCL     &kp  SEMI     &kp  LPAR     &kp  RPAR     &kp  LBRC                                                                      &kp  DOT      &kp  N4       &kp  N5       &kp  N6       &kp  EQUAL    &kp  ENTER
&kp  PSCRN    &kp  QMARK    &kp  COLON    &kp  LBKT     &kp  RBKT     &kp  RBRC     &kp  LGUI                                          &kp  RALT     &kp  N0       &kp  N1       &kp  N2       &kp  N3       &kp  MINUS    &kp  SLASH
&kp  TILDE    &kp  GRAVE    &kp  LALT                   &kp  LCTRL    &kp  LSHIFT   &kp  SPACE      &mo  ADJ_L           &trans        &kp  CBack    &kp  RSHIFT   &kp  RCTRL                  &kp  LALT     &kp  CBack    &kp  BSPC
                        >;

                        sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
                };

                adj_layer {
/* ADJUST
 * -------------------------------------------------------------------------------------------------------------------------------------
 * | TAB   |       |BT CLR | BOOTL |       | BT 0  |-----------------------------------| CLMK  |  F7   |  F8   |  F9   |  F12  |  DEL  |
 * | ESC   |       |OUT_USB|OUT_BLE|       | BT 1  |-----------------------------------| QWERTY|  F4   |  F5   |  F6   |  F11  | ENTER |
 * |       |       |       |       |       | BT 2  |  WIN  |-------------------| ALTGR | GAME  |  F1   |  F2   |  F3   |  F10  |       |
 * |       |       |  ALT  |-------|  CTRL | SHIFT | SPACE |       |---|       |  CBCK | SHIFT |  CTRL |-------|  ALT  |       |       |
 */
                        bindings = <
&kp TAB       &trans        &bt  BT_CLR   &bootloader   &trans        &bt BT_SEL 0                                                                      &to  COLEMK_L  &kp F7         &kp F8         &kp F9         &kp F12        &kp DEL
&kp ESC       &trans        &out OUT_USB  &out OUT_BLE  &trans        &bt BT_SEL 1                                                                      &to  QWERTY_L  &kp F4         &kp F5         &kp F6         &kp F11        &kp ENTER
&trans        &trans        &trans        &trans        &trans        &bt BT_SEL 2  &kp LGUI                                           &none            &to  GAME_L    &kp F1         &kp F2         &kp F3         &kp F10        &trans
&trans        &trans        &kp  LALT                   &kp  LCTRL    &kp  LSHIFT     &kp  SPACE  &trans                 &trans        &kp  CBack       &kp  RSHIFT    &kp  RCTRL                    &kp  LALT      &trans         &trans
                        >;

                        sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
                };
        };
};